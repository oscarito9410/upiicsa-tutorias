<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lav_success_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_rawRes="@raw/successful_message" />

    <TextView
        android:id="@+id/tv_subtittle_success_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_subtittle_success_animation"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="30dp"
        android:paddingBottom="30dp"
        app:layout_constraintEnd_toEndOf="@+id/lav_success_process"
        app:layout_constraintStart_toStartOf="@+id/lav_success_process"
        app:layout_constraintTop_toBottomOf="@+id/lav_success_process" />





</androidx.constraintlayout.widget.ConstraintLayout>